# LiveKit Cloud (optional)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# Azure OpenAI (required)
OPENAI_ENDPOINT=https://your-resource.openai.azure.com
OPENAI_DEPLOYMENT=your-chat-deployment-name
OPENAI_API_KEY=your-azure-openai-key
OPENAI_API_VERSION=2024-02-15-preview

# Deepgram STT (required)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Cartesia TTS (required)
CARTESIA_API_KEY=your-cartesia-api-key

# Moss semantic search (required)
MOSS_PROJECT_ID=your-moss-project-id
MOSS_PROJECT_KEY=your-moss-project-key
MOSS_INDEX_NAME=your-faq-index
MOSS_MODEL_ID=moss-minilm

# Optional logging tweaks
LOG_LEVEL=INFO
DEBUG_MODE=false
